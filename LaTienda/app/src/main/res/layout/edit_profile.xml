<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Edit_Profile_layout_titulo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/red_degrade">

        <RelativeLayout
            android:id="@+id/User_Profile_logo"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/icon_shopping_cart" />

            <TextView
                android:id="@+id/textView_nombre_app2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="EasySale"
                android:textColor="@color/BlueText"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/Edit_Profile_text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:text="Actualización Datos"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Edit_Profile_layout_formulario"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Profile_layout_titulo"
        tools:layout_editor_absoluteX="16dp">


        <LinearLayout
            android:id="@+id/Edit_Profile_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/Mensaje"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Por favor modifique los campos que desea actualizar en la BD." />

            <TextView
                android:id="@+id/edit_Profile_Nombre_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Nombre Completo:"
                android:textColor="@color/BlueText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileNombre"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_Profile_Documento_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Documento:"
                android:textColor="@color/BlueText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileDocumento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_Profile_Ciudad_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Ciudad:"
                android:textColor="@color/BlueText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileCiudad"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_Profile_Direccion_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Dirección:"
                android:textColor="@color/BlueText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileDireccion"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_Profile_TipoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Tipo Usuario:"
                android:textColor="@color/BlueText"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileTipoUsuario"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Menu_Edit_Profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Menu_Edit_Profile_button_cancel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
            android:drawableTop="@drawable/icon_cancel_edit_profile"
            android:foregroundGravity="top|center"
            android:text="Cancelar"
            android:textAlignment="center"
            android:textColor="@color/Red1"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Menu_Edit_Profile_button_save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/cuadro_textos_esq_redondeadas_gris"
            android:drawableTop="@drawable/icon_save_edit_profile"
            android:foregroundGravity="center"
            android:text="GUARDAR"
            android:textAlignment="center"
            android:textColor="@color/Red1"
            android:textSize="8sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Menu_Inferior"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <fragment
            android:id="@+id/Fragmento_Menu_Inferior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.latienda.MenuInferior">

        </fragment>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>